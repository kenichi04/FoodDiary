<% if logged_in? %>

  <div class="row">

    <%= form_for(@post) do |f| %>
    
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', row: 15 %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, '写真をアップロード' %>
        <%= f.file_field :image %>
      </div>
      
      <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
    
    <% end %>
    
  </div>
  
<% end %>